# mkdir and cd, all in one!
mkcd() {
  if [ ! -d "$@" ]; then
    mkdir "$@"
  fi
  cd "$@"
}

pushpath() {
  if [ "$1" == "" ]; then
    dir="$PWD"
  else
    dir="`readlink -m "$1"`"
  fi

  export PATH=$PATH:"$dir"
  echo "'$dir' added to path."
}

