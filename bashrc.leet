## `noglob` alias disables globbing
noglob_helper() {
    "$@"
    case "$shopts" in
        *noglob*) ;;
        *braceexpand*) ;;
        *) set +f ;;
    esac
    unset shopts
}

alias noglob='shopts="$SHELLOPTS"; set -f; noglob_helper'

