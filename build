unset CC CFLAGS CXX CXXFLAGS MAKE PARAMS

CONFIGFILE=buildconfig
MAKE="make -j4"
PARAMS=""

if [ -f $CONFIGFILE ]
then
   echo "==================== Loading parameters... ======================"
   . $CONFIGFILE
fi

export CC CFLAGS CXX CXXFLAGS MAKE PARAMS

echo ""
echo " ====== Parameters: ==========================="
echo "            CC=$CC"
echo "        CFLAGS=$CFLAGS"
echo "           CXX=$CXX"
echo "      CXXFLAGS=$CXXFLAGS"
echo "          MAKE=$MAKE"
echo "        PARAMS=$PARAMS"
echo ""

echo "============================ Configuring... ==============================="
if ./configure $PARAMS
then
   echo "============================ Making... =================================="
   eval $MAKE
   echo "========================= DONE! =============================="
else
   echo "===================== Configure failed! ========================"
fi
