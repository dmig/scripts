#!/usr/bin/env ruby

args = ARGV

if args.empty? or args.delete("--help") or args.delete("-h")
  puts "Youtube-DL Wrapper!"
  puts
  puts "Usage:"
  puts "  gfv [options] <youtube url(s)>"
  puts
  puts "Options:"
  puts "  -hq    High quality mode (often has to remux)"
  puts "  -n     Number the files when downloading playlists"
  puts "  -a     Extract audio only"
  puts
  puts "(any other options will be passed directly to youtube-dl)"
  puts
  exit 1
end

cmd = %w[
  youtube-dl
  --no-mtime
  --xattrs
  --sub-format=srt --sub-lang=en --write-sub 
]
# --sub-lang=en --write-sub
# --convert-subtitles=srt --sub-lang=en --embed-subs

unless args.include?("-o")
  cmd << "-o"
  if args.delete("-n")
   cmd << "%(playlist_index)s. %(title)s.%(ext)s"
  else
   cmd << "%(title)s.%(ext)s"
  end
end

if args.delete("-hq")
  cmd += ["-f", "bestvideo[ext=mp4]+bestaudio[ext=m4a]"]
else
  cmd += ["-f", "best", "--youtube-skip-dash-manifest"]
end

cmd << "--extract-audio" if args.delete("-a")

urls, args = args.partition { |arg| arg[%r{^\w{2,20}://}] }

cmd += args

urls.each do |url|
  onecmd = cmd.dup
  onecmd << url

  puts "-------------------------------------------------"
  puts "  Downloading #{url}"
  puts "-------------------------------------------------"
  puts
  puts "Commandline:"
  puts "  #{onecmd.join(" ")}"
  puts

  system *onecmd
end
