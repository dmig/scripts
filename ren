#!/usr/bin/env python
import readline, sys, os

if len(sys.argv) == 2:
  src = sys.argv[1]
else:
  print "Usage: ren <filename>"
  sys.exit(1)
  
readline.set_startup_hook( lambda: readline.insert_text(src) )

dest = raw_input("Rename to: ")

print
print "Renaming", repr(src), "to", repr(dest)

os.rename(src, dest)
